<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical">

<RelativeLayout
    android:layout_width="270dp"
    android:layout_height="45dp"
    android:layout_gravity="center"

    android:layout_marginTop="150dp"
    android:background="@drawable/bg_master_vol_top">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/closePayDial">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Payment Information"
            android:textColor="#415560"
            android:textSize="16sp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/closePayDial"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:src="@drawable/delete_image" />

</RelativeLayout>

<RelativeLayout
    android:layout_width="270dp"
    android:layout_height="250dp"
    android:layout_gravity="center"
    android:background="@drawable/bg_master_vol_bottom">

    <LinearLayout
        android:id="@+id/lmsid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <ImageView
                android:id="@+id/CardImg"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"/>

            <TextView
                android:id="@+id/txtAmount"
                android:layout_below="@id/CardImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:text="Amount Information "
                android:textColor="#4B7AFF" />
            <TextView
                android:id="@+id/txtPackId"
                android:layout_below="@id/txtAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:text="Package Information "
                android:textColor="#4B7AFF" />

            <Button
                android:id="@+id/btnPayment"
                android:layout_below="@id/txtPackId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:text="Confirm"
                >

            </Button>



        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
</LinearLayout>