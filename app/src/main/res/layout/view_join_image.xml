<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="5dp"
    android:layout_marginRight="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivImageName"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="#383838"
            android:padding="10dp"
            android:src="@drawable/profile1" />


        <ImageView
            android:id="@+id/redCross"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/red_close"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/ivImageName"
            android:layout_alignEnd="@+id/ivImageName"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_below="@+id/ivImageName"
            android:background="@color/color_translucent_black"
            android:text="sillypoet"
            android:textSize="10dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:gravity="center"/>

    </RelativeLayout>
</RelativeLayout>






