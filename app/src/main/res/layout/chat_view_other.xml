<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rlMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/userProfileImage"
            android:layout_toRightOf="@+id/userProfileImage"
            android:background="@drawable/newest_grey_bubble">

            <TextView
                android:id="@+id/chatMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:text="A"
                android:textColor="#425661"
                android:textSize="16sp" />

            <RelativeLayout
                android:id="@+id/rlChatImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chatMessage"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/chatImage"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/background_dialog" />

                <ImageView
                    android:id="@+id/fileClip"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_below="@+id/chatImage"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/paperclip" />

                <TextView
                    android:id="@+id/chatImageName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/fileClip"
                    android:layout_below="@+id/chatImage"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/fileClip"
                    android:layout_toRightOf="@+id/fileClip"
                    android:text="photo.jpg"
                    android:textColor="#425661"
                    android:textSize="13sp" />

            </RelativeLayout>
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/textView10"
            android:layout_toRightOf="@+id/userProfileImage"
            android:layout_toEndOf="@+id/userProfileImage">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="12dp">

                <ImageView
                    android:id="@+id/tick"
                    android:layout_width="12dp"
                    android:layout_height="8dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="18dp"
                    android:layout_marginRight="18dp"
                    android:background="@drawable/tick_grey"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/doubleTick"
                    android:layout_width="20dp"
                    android:layout_height="8dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="18dp"
                    android:layout_marginRight="18dp"
                    android:background="@drawable/dubble_tick_grey"
                    android:visibility="gone" />

            </RelativeLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlMessage"
            android:text="Friday 11:55 AM"
            android:textAlignment="center"
            android:textColor="#425661"
            android:textSize="12sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userProfileImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_above="@+id/textView10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/profile1" />

    </RelativeLayout>
</RelativeLayout>

