<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/card_oontacts"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical">

<android.support.v7.widget.CardView
    android:id="@+id/cvMessenger"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#FFFFFF">

    <RelativeLayout
        android:id="@+id/rlComplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userProfileImage"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/profile1" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/userProfileImage"
                android:layout_toEndOf="@+id/userProfileImage"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp">

                <TextView
                    android:id="@+id/tvRealName"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="Tosha Jet"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="#425661"
                    android:textSize="15dp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvRealName"
                    android:maxLines="2"
                    android:text="#casamigo"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="#425661"
                    android:textSize="13dp" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/grey_circle"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_marginRight="25dp"
                android:padding="25dp"
                android:layout_marginEnd="25dp"
                android:src="@drawable/grey_circle"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                 />

            <ImageView
                android:id="@+id/blue_circle"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_marginRight="25dp"
                android:padding="25dp"
                android:layout_marginEnd="25dp"
                android:visibility="gone"
                android:src="@drawable/blue_circle"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="#EDEDED"/>

</android.support.v7.widget.CardView>
</LinearLayout>